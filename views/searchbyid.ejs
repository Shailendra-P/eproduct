<style type="text/css">
    .root{
      display: flex;
      justify-content: center; 
      align-items: center; 
     }
     .box{
       width:600px;
     
       background-color: #dcdde1;
       border-radius: 20px;
       margin-top: 30px;
       padding: 20px;
    
     }
     .gap{
      margin-top: 10px;
    
     }
    
      
       .dashboard{
         width: 300px;
         height: 100vh;
         padding: 10px;;
         background-color: #f1f2f6;
         
       }
       .dgap{
        margin-top: 15px;
        width: 250px;
       }
      
      </style>
    
    
     <html>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
      <title>
          Admin Dashboard
      </title>
      <body>
    
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">
          <img src="/images/product.png" width="30" height="30" class="d-inline-block align-top" alt="">
          Search Product 
        </a>
        <div>
          <img src="/images/<%=aresult.picture %>" style="border-radius: 15px; width: 30px; height: 30px;" />
          <%=aresult.adminname %>
        </div>
      </nav>
      <div class="form-row">
        <div class="form-group col-md-2" style="display: flex; align-items: center; justify-content:left; ">
        <div class="dashboard">
          <div><button type="button" class="btn btn-light dgap" style="font-size: 16px;font-weight: bold;">Dashboard</button></div>    
        <div><a type="button" class="btn btn-light dgap" href="/products/productinterface">Add Product</a></div>  
        <div><a type="button" class="btn btn-light dgap" href="/products/displayproducts">List Product</a></div>  
        <div><a type="button" class="btn btn-light dgap" href="/products/searchbyid">Search Product</a></div>  
        <div><a type="button" class="btn btn-light dgap" href="/admin/logout">Logout</a></div>  
        
        
        </div>    
        
        
        </div>
    
        <div class="form-group col-md-10" style="display: flex;  justify-content: center; ">
        
          <script src="https://code.jquery.com/jquery-3.6.0.min.js">
          </script>
          <title>
              Search Product
          </title>
          <body bgcolor="#f1f2f6">
            <form action="/products/displaybyid">
              <div class="root">
                 <div class="box">
                 <div class="row">
                    <div style="padding-left: 20px;font-size: 20px;color:coral; font-weight: bolder; letter-spacing: 2px;">
                      <img src="/images/product.png" width="30">
                      Search Product
                    </div> 
                    <div style="font-size:20; font-weight: bold; display: flex;justify-content: right;align-items: center;width:300">
                      <a href="/products/displayproducts">Product List</a>
                    </div>
      
                 </div>
                 
                  <div class="row gap">
                      <div class="col">
                        <input required name="pid" type="text" class="form-control" placeholder="Product id you want to search...">
                      </div>
                    
                                       
                    </div>
      
                    <div class="row gap">
                      <div class="col" style="display: flex; justify-content: center; align-items: center; ">
                        <button type="Submit" style="width:200px" class="btn btn-primary">Submit</button>
                      </div>
                      <div class="col" style="display: flex; justify-content: center; align-items: center; ">
                        <button type="Reset" style="width:200px" class="btn btn-primary">Reset</button>
                      </div>
                                       
                    </div>
      
      
                    <div class="row gap">
                      <div class="col" style="display: flex; justify-content: center; align-items: center; ">
                      <h3><%=message %></h3>
                      </div>
                    </div>
      
      
                 </div>
               
      
      
              </div>
      </form>
      
          </body>
        
        </div>
      </div>
            </body>
      </html>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    